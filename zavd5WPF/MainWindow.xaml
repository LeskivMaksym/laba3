<Window x:Class="WpfArrayOperations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Array Operations" Height="350" Width="400">
    <Grid>
        <Label Content="Кількість елементів:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="NumberOfElementsTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="120,10,0,0"/>
        <Button Content="Згенерувати масив" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10,40,0,0" Click="GenerateArrayButton_Click"/>

        <ListBox x:Name="GeneratedArrayListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="350" Height="150" Margin="10,80,0,0"/>

        <Button Content="Знайти суму модулів" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10,240,0,0" Click="SumOfModulusButton_Click"/>
        <Button Content="Сортувати масив" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="190,240,0,0" Click="SortArrayButton_Click"/>

        <TextBox x:Name="ResultTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="350" Height="40" Margin="10,270,0,0" IsReadOnly="True"/>
    </Grid>
</Window>

